@startuml

' 基础用户类
class 用户 {
  - 用户ID: INT
  - 昵称: String
  - 手机号: INT
  - 性别: Bool
  + 注册()
  + 登录()
  + 编辑个人信息()
}

' 车主类
class 车主 {
  + 发布行程()
  + 管理车辆信息()
  + 查看订单()
  + 处理乘客反馈()
  + 认证驾驶资格()
  + 修改行程()
  + 取消行程()
}
车主 --|> 用户

' 乘客类
class 乘客 {
  + 搜索拼车需求()
  + 发起拼车请求()
  + 预订订单()
  + 取消预订()
  + 管理支付方式()
  + 获取反馈()
}
乘客 --|> 用户

' 管理员类
class 管理员 {
  + 审核用户()
  + 管理订单()
  + 违规处理()
  + 发布公告()
  + 平台维护()
}
管理员 --|> 用户

' 车辆类
class 车辆 {
  - 车型: String
  - 车牌号: String
  - 车辆颜色: String
  - 行驶里程: INT
  - 保险状态: String
}
车主 "1" -- "0..*" 车辆 : 拥有 >

' 拼车邀请类
class 拼车邀请 {
  - 出发地: String
  - 目的地: String
  - 出发时间: DateTime
  - 可用座位数: INT
  - 费用: Double
  - 备注: String
}
车主 "1" -- "0..*" 拼车邀请 : 发布 >

' 拼车需求类
class 拼车需求 {
  - 起始地点: String
  - 目的地: String
  - 出发时间: DateTime
}
乘客 "1" -- "0..*" 拼车需求 : 发布 >

' 订单类
class 订单 {
  - 订单ID: INT
  - 订单状态: String
  - 支付状态: String
  - 费用详情: Double
}
拼车邀请 "1" -- "0..*" 订单 : 关联 >
拼车需求 "1" -- "0..*" 订单 : 关联 >
车主 "1" -- "0..*" 订单 : 关联 >
乘客 "1" -- "0..*" 订单 : 关联 >

' 违规记录类
class 违规记录 {
  - 违规ID: INT
  - 违规类型: String
  - 处理状态: String
  - 投诉内容: String
}
用户 "1" -- "0..*" 违规记录 : 产生 >

' 认证信息类
class 认证信息 {
  - 驾驶证号: String
  - 车牌号: String
  - 认证状态: String
  - 审核时间: DateTime
}
车主 "1" -- "0..1" 认证信息 : 认证 >

' 常用地址类
class 常用地址 {
  - 地址: String
  - 类型: String
}
用户 "1" -- "0..*" 常用地址 : 拥有 >

' 评价类
class 评价 {
  - 评分: INT
  - 内容: String
}
车主 "1" -- "0..*" 评价 : 获得 >
乘客 "1" -- "0..*" 评价 : 获得 >

' 支付类
class 支付 {
  - 支付金额: Double
  - 支付时间: DateTime
  - 支付状态: String
  - 支付方式: String
}
订单 "1" -- "1" 支付 : 关联 >

@enduml